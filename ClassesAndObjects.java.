// Пример Java класса
class ПримерКласса {
    // Поля класса
    private String имя;

    // Конструктор класса
    public ПримерКласса(String имя) {
        this.имя = имя;
    }

    // Метод класса
    public void приветствие() {
        System.out.println("Привет, " + имя + "!");
    }
}

public class Пример {
    public static void main(String[] args) {
        // Создание объекта класса
        ПримерКласса объект = new ПримерКласса("Мир");

        // Вызов метода объекта
        объект.приветствие();
    }
}
